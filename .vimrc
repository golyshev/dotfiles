syntax on
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set visualbell
set number

set shiftwidth=2
set softtabstop=2
set expandtab

set background=dark
set history=1000
set showmode
set showcmd
set showmatch
set scrolloff=5

set list
set listchars=tab:>.,trail:.,extends:\#,nbsp:.

